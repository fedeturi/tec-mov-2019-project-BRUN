<?xml version="1.0" encoding="utf-8"?>


<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/today_icon_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_today_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_textview_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/today_weather_text_description"
                android:textSize="36sp"
                app:autoSizeTextType="none" />

            <TextView
                android:id="@+id/location_textview_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"
                android:text="@string/tody_weather_tv_city"
                android:textSize="42sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_textview_today_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/today_weather_text_description_condition"
                android:textSize="36sp"
                app:autoSizeTextType="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/primaryLightColor"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/today_min_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="30 ºC"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryDarkColor"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/today_min_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Min"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryDarkColor"
                        android:textSize="28sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:background="@color/primaryDarkColor"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/today_current_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="30 ºC"
                        android:textAlignment="center"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/today_current_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Current"
                        android:textAlignment="center"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="36sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/primaryLightColor"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/today_max_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="30 ºC"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryDarkColor"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/today_max_max"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Max"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryDarkColor"
                        android:textSize="28sp" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/updated_At_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="Last update was made 10 minutes ago"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/today_weather_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:visibility="gone" />

</FrameLayout>


